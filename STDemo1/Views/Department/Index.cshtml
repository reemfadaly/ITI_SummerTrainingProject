@model List<Department>
@{
    Layout = "_Layout2";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/> @*classes are implemented in these libraries*@
</head>
<body>
    @*<a href="/department/create"class="btn btn-danger">Create</a> Create link that directs the user to create action (get)*@
    <a asp-action="create" asp-controller="Department" class="btn btn-danger">Create</a> @*changing any href to easily change the order of any given url pattern*@
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Operation</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3"> No departments</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DeptId</td>
                    <td>@item.DeptName</td>
                    <td>@item.Capacity</td>
                    <td>
                        @*<a href="/department/details?deptid=@item.DeptId" class="btn btn-info">Details</a>  @*this is through routing*@
                        <a asp-action="details" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-info">Details</a> @*asp-route-actionparameter*@
                        <a asp-action="delete" onclick="return confirm('Are you sure?')" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-danger">Delete</a> @*onclick js event returns yes or no*@
                        <a asp-action="edit" as-controller="department" asp-route-id="@item.DeptId" class="btn btn-info">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</body>


</html>

